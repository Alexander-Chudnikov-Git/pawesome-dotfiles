# Unified rule setup function
apply_bspc_rules() {
    local state=$1
    local focus=$2
    local follow=$3
    local rectangle=$4
    local center=$5

    shift 5
    for app in "$@"; do
        bspc rule -a "$app" state="$state" focus="$focus" follow="$follow" rectangle="$rectangle" center="$center"
    done
}

# Floating Apps
apply_bspc_rules floating on on 1000x600+0+0 true \
    dolphin Dolphin URxvt Alacritty xterm xfce xfce4 Xfce4-terminal xfce4-terminal xdman-Main Lxappearance Gparted Thunar \
    Viewnior Xarchiver Pavucontrol pavucontrol Nm-connection-editor Firewall-config firefox:Dialog firefox:Browser zenity \
    firefox:Pop-up nitrogen Gpick Xgnokii:* Xgnokii:*

# Phone stuff
apply_bspc_rules floating on on 280x100+1960+1250 \
    Xgnokii:xgnokii Xgnokii:xgnokii:Options

# Start screen
apply_bspc_rules floating on off 600x200+10+40 \
    cava

# Wallpaper
bspc rule -a lwpwlp layer=below

# Floating media
apply_bspc_rules floating on on 500x300+1740+50 \
    *:*:Picture-in-picture *:*:Picture-in-Picture mpv

# Private polybar rule
bspc rule -a polybar private

# Qt stuff
apply_bspc_rules floating off off 0x0 \
    side_drop_down_menu qt-docking-windows qt-ukr-categorizer Qt Docking Windows

# Warnings
apply_bspc_rules floating on on 500x250+0+0 true \
    zenity
